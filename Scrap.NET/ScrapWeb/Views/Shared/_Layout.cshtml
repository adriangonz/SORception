<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="/Content/Site.css" rel="stylesheet" />
</head>
<body ng-app="scrap.module">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Desguaces Java</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Desguace .NET</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#/orders">Solicitudes pendientes</a></li>
                    <li><a href="#/offers">Ofertas realizadas</a></li>
                    <li><a href="#/orders-received">Pedidos recibidos</a></li>
                    <li><a href="#/config">Configuracion</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Desguace .NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("https://ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js",
                "https://ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular-cookies.js",
                "~/Scripts/notificationWidget.js",
                "~/Scripts/angular-locale_es-es.js", 
                "~/app/app.js",                
                "~/app/services/authService.js",
                "~/app/services/scrapService.js",
                "~/app/services/settingsService.js",
                "~/app/directives/authDirective.js",
                "~/app/directives/scrapDirective.js",
                "~/app/directives/settingsDirective.js",
                "~/app/controllers/settingsController.js",
                "~/app/controllers/ordersController.js",
                "~/app/controllers/createOfferController.js",
                "~/app/controllers/offersController.js",
                "~/app/controllers/pedidosController.js",
                "~/app/controllers/viewOfferController.js",
                "~/app/controllers/viewPedidoController.js")
</body>
</html>
